<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kimonik.utilsmodule.ui.MTopBarView
        android:id="@+id/mtb_act_customviewpager"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorQianLan"
        app:centerText="@string/zidingyiviewpager"
        app:leftImage="@drawable/xvector_back" />

    <com.kimonik.mypublicmodule.ui.CustomViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4887E5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FDB051" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DB5E20" />
    </com.kimonik.mypublicmodule.ui.CustomViewPager>

</LinearLayout>